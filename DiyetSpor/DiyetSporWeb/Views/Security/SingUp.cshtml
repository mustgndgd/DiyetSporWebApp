@model DiyetSporWeb.Models.kullaniciKayitModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign Up Form by Colorlib</title>

    <!-- Font Icon -->
    <link rel="stylesheet" href="~/Sources/KayitEkran/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/Sources/KayitEkran/css/style.css">
</head>
<body>

    <div class="main">
        <div class="container">
            <div class="signup-content">
                <div class="signup-img">
                    <img src="~/Sources/KayitEkran/images/signup-img.jpg" alt="">
                </div>
                <div class="signup-form">
                    <form method="POST" class="register-form" id="register-form">
                        <h2>Kayıt olmak ister misiniz...</h2>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Ad :</label>
                                <input type="text" name="kullaniciAd" id="name" required />
                                 @Html.ValidationMessageFor(m => m.kullaniciAd, "", new { @style = "color:blue" })
                            </div>
                            <div class="form-group">
                                <label>Soyad :</label>
                                <input type="text" name="kullaniciSoyad" id="father_name" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>E mail :</label>
                            <input type="email" name="kullaniciEmail" id="address" required />
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label>TC no :</label>
                                <input type="number" name="kullaniciTc" id="name" required />
                            </div>
                            <div class="form-group">
                                <label>Telefon :</label>
                                <input type="number" name="kullaniciTelefon" id="father_name" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Doğum Tarihi : </label>
                            <input type="date" name="kullaniciDogumTarihi" />
                        </div>

                        <div class="form-group">
                            <label>Cinsiyet Seçiniz :</label>
                            <div class="form-select">
                                <select name="kullaniciCinsiyet" id="state">
                                    <option value="true">ERKEK</option>
                                    <option value="false">KADIN</option>
                                </select>
                                <span class="select-icon"><i class="zmdi zmdi-chevron-down"></i></span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label>Kullanıcı Tipi Seçiniz :</label>
                                <div class="form-select">
                                    <select name="kullaniciTipi" id="state">
                                        <option value="U">ÜYE</option>
                                        <option value="D">DİYETİSYEN</option>
                                        <option value="S">ANTRENÖR</option>
                                    </select>
                                    <span class="select-icon"><i class="zmdi zmdi-chevron-down"></i></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Şifre :</label>
                                <input type="number" name="kullaniciSifre" id="name" required />
                            </div>
                        </div>
                        <div class="form-submit">
                            <input type="submit" value="Hepsini Sil" class="submit" name="reset" id="reset" />
                            <input type="submit" value="Kayıt ol" class="submit" name="submit" id="submit" />
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>

    <!-- JS -->
    <script src="~/Sources/KayitEkran/vendor/jquery/jquery.min.js"></script>
    <script src="~/Sources/KayitEkran/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>