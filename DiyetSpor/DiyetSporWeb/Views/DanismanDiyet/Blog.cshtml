
@using DiyetSporWeb.Models
@model List<tblBlog>

@{
    ViewBag.Title = "Blog";
    Layout = "~/Views/Shared/_DanismanDiyetLayout.cshtml";
}

<h2>  <a class=" btn btn-success" href="/DanismanDiyet/BlogYaz">Blog Yaz</a></h2>

@foreach (var blog in Model)
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@blog.blogBaslik  |       Blog  Puan:   @blog.blogPuan </h6>
        </div>
        <div class="card-body">
            @blog.blogDetay
        </div>
        @if (blog.kullaniciid == ViewBag.id)
        {
            <div>
                <a href="/DanismanDiyet/BlogAktiflik/@blog.blogid" class="btn btn-success">Sil</a>
            </div>
        }
    </div>
    <hr />
}